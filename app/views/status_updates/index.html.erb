<h1>Listing status_updates</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Done</th>
      <th>Doing</th>
      <th>Blockers</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @status_updates.each do |status_update| %>
      <tr>
        <td><%= status_update.user_id %></td>
        <td><%= status_update.done %></td>
        <td><%= status_update.doing %></td>
        <td><%= status_update.blockers %></td>
        <td><%= link_to 'Show', status_update %></td>
        <td><%= link_to 'Edit', edit_status_update_path(status_update) %></td>
        <td><%= link_to 'Destroy', status_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

